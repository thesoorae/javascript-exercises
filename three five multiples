function ThreeFiveMultiples(num) { 
multiples=[];
  for(x=3;x<num;x+=3){
    multiples.push(x);}
  for(i=5;i<num;i+=5){
    if(i%3!=0){
    multiples.push(i)};}
  
  sum=0;
  for(y=0;y<multiples.length;y++){
    sum+=parseInt(multiples[y])};
  
  
  // code goes here  
  return sum; 
}
   
// keep this function call here 
// to see how to enter arguments in JavaScript scroll down
ThreeFiveMultiples(readline());           
